.status-footer {
    background: $beldex-lightgray;
    color: #9393B1;
    border-top: 1px solid #333;
    padding-top: 2px;
    box-shadow: none;
    font-size: 12px;
    border-radius:10px;

    .status-line {
        padding: 8px;
        margin-bottom: 5px;

        .status {
            flex: 1;
            span {
                margin-right: 4px;
            }

            .status-text {
                font-weight: bold;
            }

            .ready {
              color: $positive;
            }

            .scanning, .syncing {
                color: goldenrod;
            }

            .updateRequired {
                color: $negative;
            }
        }

        div {
            padding: 0 8px;
        }
    }

    .status-bars {

        div {
            height: 3px;
            position: relative;
            bottom: 0;
            left: 0;
            -webkit-transition: width 0.5s ease-out;
            transition: width 0.5s ease-out;
        }

        div:first-child {
            // TODO: should first and last child be different, where even is this?
            background-color: $positive;
        }

        div:last-child {
            background-color: $positive;
        }
    }

    .status-bars.syncing, .status-bars.scanning {
        div:first-child {
            background-color: goldenrod;
        }

        div:last-child {
            background-color:goldenrod;
        }
    }

    .status-bars.updateRequired {
        div:first-child {
            color: $negative;
            background-color: $negative;
        }

        div:last-child {
            color: $negative;
            background-color: $negative;
        }
    }

}

